    <div class="row">
        <div class="col-lg-offset-1 col-lg-10">
            <div class="form-group">
                <lable for="username" class="text-danger">User Name</lable>
                <input type="text" id="username" class="form-control" name="username" placeholder="eg: Yuvraj" required>
            </div>
            <div class="form-group">
                <lable  for="mobileNumber" class="text-danger">Mobile Number</lable>
                <input type="tel" id="mobileNumber" class="form-control" name="mobileNumber" placeholder="eg:9876543210" required>
            </div>
            <div class="form-group">
                <lable  for="email" class="text-danger">Pick up Location</lable>
                <input type="text" id="email" class="form-control" name="email"  placeholder="eg: helpdesk@vpageinc.com" required>
            </div>
            <div class="form-group">
                <lable  for="email" class="text-danger">Drop Location</lable>
                <input type="text" id="email" class="form-control" name="email"  placeholder="eg: helpdesk@vpageinc.com" required>
            </div>
            <div class="form-group">
                <lable  for="email" class="text-danger">Pick up Time</lable>
                <input type="text" id="email" class="form-control" name="email"  placeholder="eg: helpdesk@vpageinc.com" required>
            </div>

            <button type="submit" id="booking" class="btn btn-danger">Booking</button>
        </div>
    </div>
</form>