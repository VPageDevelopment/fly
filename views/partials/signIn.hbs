<div role="tabpanel" class="tab-pane active" id="signUpWrapper">
    {{#if errors}}
        {{#each errors}}
            <div class="alert alert-danger">
                {{message}} 
            </div>
        {{/each}}
    {{/if}} 

    {{#if message}}
        {{#each message}}
            <div class="alert alert-danger">
                {{message}} 
            </div>
        {{/each}}
    {{/if}} 

        <h3>Sign Up !</h3>
        <form  method="post" action="/register">
            <div class="form-group">
                <lable for="username">User Name</lable>
                <input type="text" id="username" class="form-control" name="username" placeholder="eg: Yuvraj" required>
            </div>
            <div class="form-group">
                <lable  for="mobileNumber">Mobile Number</lable>
                <input type="tel" id="mobileNumber" class="form-control" name="mobileNumber" placeholder="eg:9876543210" required>
            </div>
            <div class="form-group">
                <lable  for="email">Email</lable>
                <input type="text" id="email" class="form-control" name="email"  placeholder="eg: helpdesk@vpageinc.com" required>
            </div>
            <div class="form-group">
                <lable  for="password">Password</lable>
                <input type="password" id="password" placeholder="********" class="form-control" name="password" required>
            </div>
            <div class="form-group">
                <lable  for="confirmPassword">Confirm Password</lable>
                <input type="password" id="confirmPassword" placeholder="*********" class="form-control" name="confirmPassword">
            </div>
            <div class="form-group">
                <lable>
                    <input type="checkbox" checked="checked" name="terms" id="terms" value="Yes"> I Agree to <span >
                        <a href="#" class="brand-secondary">Terms of Service</a>
                        </span> and <span ><a href="#" class="brand-secondary">Privacy policy</a></span>
                </lable>
            </div>
            <button type="submit" id="signUp" class="btn btn-info">Sign up</button>
        </form>
    </div>